# =========================
# Database
# =========================
DB_TYPE=sqlite
DB_DATABASE=db.sqlite

# To switch to Postgres later
# DB_TYPE=postgres
# DB_HOST=localhost
# DB_PORT=5432
# DB_USERNAME=postgres
# DB_PASSWORD=postgres
# DB_DATABASE=estate_app

# =========================
# Authentication
# =========================
JWT_SECRET=supersecret123

# Separate access & refresh tokens
JWT_ACCESS_SECRET=supersecret123
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_SECRET=supersecret123   # fallback to JWT_SECRET if not set
JWT_REFRESH_EXPIRY=30d

# =========================
# Cookie settings
# =========================
COOKIE_SECURE=false       # âœ… true in production w/ HTTPS
COOKIE_SAME_SITE=lax
COOKIE_HTTP_ONLY=true

# =========================
# IoT / Real-time settings
# =========================
IOT_GATEWAY_PORT=3001     # WebSocket/MQTT gateway port
IOT_PROTOCOL=ws           # ws / wss / mqtt (future ready)
IOT_BROKER_URL=ws://localhost:3001 # placeholder, replace if MQTT later

# =========================
# App Settings
# =========================
NODE_ENV=development
LOG_LEVEL=debug           # debug | info | warn | error
RATE_LIMIT=5              # per minute (short throttle window)
