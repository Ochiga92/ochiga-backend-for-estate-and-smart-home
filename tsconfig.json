{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "strict": true,
    "typeRoots": ["./src/auth/types", "./node_modules/@types"],
    "types": ["node", "express", "jest"]
  },
  "exclude": ["node_modules", "dist"]
}